@model IEnumerable<ASP.NET_CORE_WEB_SQL.Models.Product>

<h2>Danh sách sản phẩm</h2>
<a asp-action="Create" class="">Thêm sản phẩm</a>

@if(TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}


<table class="table table-striped border border-1">
    <tr class="border border-1">
        <th>Id</th>
        <th>Tên</th>
        <th>Giá</th>
        <th>Mô tả</th>
        <th>Hình ảnh</th>
        <th>Chức năng</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price.ToString("N0") đ</td>
            <td>@item.Description</td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" width="100" />
                }
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success rounded-1 text-white ms-1 fw-bold">Edit</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm @item.Name không?');"
                      style="display:inline;">
                    <button type="submit" class="btn btn-danger rounded-1 text-white fw-bold">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>